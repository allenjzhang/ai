    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Butler Agent",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/agents/butler/dist/index.js",
            "runtimeArgs": [
                "--env-file=.env"
            ],
            "cwd": "${workspaceFolder}/agents/butler",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/agents/butler/dist/**/*.js"
            ]
        }
    ]
}